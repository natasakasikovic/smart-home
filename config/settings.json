            "name": "Door PIR motion sensor",
            "simulated": true,
            "topic": "sensors/dpir1",
            "pin": 16,
            "verbose": true,
            "runs_on": "PI1"
        },
        "DS1": {
            "name": "Door sensor",
            "simulated": true,
            "topic": "sensors/ds1",
