            "debounce_ms": 50,
            "verbose": true,
            "poll_interval": 0.5,
            "runs_on": "PI1"
        },
        "DMS": {
            "name": "Door Membrane Switch",
            "simulated": true,
            "topic": "sensors/dms",
            "pin": 27,
            "verbose": true,
